<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="20-09-2021" author="Ahto Nellis">
        <createTable tableName="countries">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text">
                <constraints unique="true"/>
            </column>
            <column name="capital" type="text"/>
            <column name="population" type="int"/>
            <column name="area" type="int"/>
            <column name="hdi" type="double"/>
            <column name="water" type="double"/>
            <column name="density" type="double"/>
            <column name="avgheight" type="int"/>
            <column name="highestpoint" type="int"/>
            <column name="lowestpoint" type="int"/>
        </createTable>


    </changeSet>
    <changeSet id="2021-09-20" author="Ivan">
        <createTable tableName="players">
            <column name="id" type="int" >
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text"/>
            <column name="points" type="int"/>
            <column name="wins_nr" type="int"/>
            <column name="moves_nr" type="int"/>
            <column name="used_cards" type="int"/>
            <column name="games_id" type="int"/>
            <column name="last_asking" type="int"/>
        </createTable>
    </changeSet>
    
    <changeSet id="2021-09-21" author="Ahto Nellis">
        <createTable tableName="game">
            <column name="game_id" type="int">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_game_players" references="players(games_id)"/>
            </column>
            <column name="player_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_game_players" references="players(id)"/>
            </column>
            <column name="country_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_game_countries" references="countries(id)"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>

